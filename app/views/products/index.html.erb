<h1>Listing products</h1>

<%= form_for(:search, :url => search_products_path) do |f| %>
  <strong>Search application: </strong>
  <input id='search_app_name' name='search[app_name]' type='text' style='margin:10px; width:160px;' />
  <%= f.submit 'Search', :html => "style='float:left'"%>
  <div style='clear:both'></div>
<% end %>

<table>
  <tr>
    <th>Track name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.track_name %></td>
    <td><%= product.artwork_url_60 %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
